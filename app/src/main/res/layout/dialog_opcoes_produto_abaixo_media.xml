<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/nav_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/editText_Procura_Prod_Lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Opções do Produto"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_nav_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_prods_lista"
        android:layout_above="@id/layout_botoes"
        android:layout_below="@+id/editText_Procura_Prod_Lista"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout_produtos_pesquisados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_adiciona_produto_nova_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar à Nova Lista" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar à Lista Existente" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartilhar" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar Alerta" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Histórico de Preços" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>