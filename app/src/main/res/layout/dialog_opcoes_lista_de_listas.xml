<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/nav_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/editText_Procura_Prod_Lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Opções Da Lista"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_nav_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_prods_lista"
        android:layout_above="@id/layout_botoes"
        android:layout_below="@+id/editText_Procura_Prod_Lista"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout_produtos_pesquisados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/bt_editar_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Lista" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/bt_comparar_precos_em_mercados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comparar Preços em Mercados" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/br_compartilhar_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartilhar Lista" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:id="@+id/bt_excluir_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excluir Lista" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>