<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".BuyListActivity">

    <View
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gradient_list"/>

    <TextView
        android:id="@+id/txtList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos Add: 0"
        android:layout_marginBottom="32dp"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/edtSearch"/>

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/button_edttext"
        android:drawableLeft="@drawable/ic_keyboard"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Pesquisar Produto.."
        android:textColorHint="@color/hint_nav_login"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/layoutProdutos"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSearch"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:elevation="15dp"
        app:srcCompat="@drawable/deepprices_w"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="?attr/isLightTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>