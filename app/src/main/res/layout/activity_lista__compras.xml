<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_color"
    android:orientation="vertical"
    tools:context=".Criar_Lista_Compras">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/button_edttext"
            android:drawableStart="@drawable/ic_shopping"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nome da Lista"
            android:textColorHint="@color/nav_color"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="Produtos da Lista (0)"
            android:textColor="@color/text_color" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:id="@+id/botoes_comando"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:background="@drawable/buttonshape_small_left"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:onClick="adicionarProduto"
            android:text="Adicionar Produto" />

        <Button
            android:id="@+id/button3"
            android:background="@drawable/buttonshape_small_right"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:onClick="preFinalizarLista"
            android:text="Finalizar Lista" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/botoes_comando"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_top"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:id="@+id/layout_produtos_da_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</RelativeLayout>