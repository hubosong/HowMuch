<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nav_color"
    android:gravity="center"
    tools:context=".Lista_Compras">

    <ProgressBar
        android:id="@+id/progWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/txtWait"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_progress"
        android:textColor="@color/text_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtInfoLupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clique na LUPA para consultar os Produtos"
            android:textColor="@color/text_color"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:layout_gravity="center"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:elevation="15dp"
            android:clipToPadding="false"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtInfoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itens Adicionados"
            android:textColor="@color/text_color"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnsOptions"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnOptLista"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Opções"
            android:onClick="Options"
            android:textColor="@color/nav_color"
            android:background="@drawable/buttons_login"
            android:drawableLeft="@drawable/ic_search_upload"/>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="Finalizar"
            android:onClick="Finish"
            android:textColor="@color/nav_color"
            android:background="@drawable/buttons_login"
            android:drawableLeft="@drawable/ic_search_upload"/>

    </LinearLayout>



</LinearLayout>