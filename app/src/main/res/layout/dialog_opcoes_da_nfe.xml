<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editText_Procura_Prod_Lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Opções Da Nota Fiscal"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_nav_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_prods_lista"
        android:layout_above="@id/layout_botoes"
        android:layout_below="@+id/editText_Procura_Prod_Lista"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout_produtos_pesquisados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/bt_ver_detalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Detalhes" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/bt_transformar_em_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transformar em Lista de Compras" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                android:id="@+id/bt_compartilhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartilhar" />

            <Button
                android:background="@drawable/buttonshape"
                android:textColor="@android:color/white"
                android:id="@+id/bt_excluir_nfe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excluir" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>