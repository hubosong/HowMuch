<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/nav_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtTituloDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Adicionar Produto Ã  Lista:"
        android:inputType="textPersonName"
        android:textColor="@color/text_color"/>

    <LinearLayout
        android:id="@+id/layout_botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll_prods_lista"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="@android:color/white"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="@android:color/white"
            android:id="@+id/bt_AdicionarProdutoLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Adicionar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_prods_lista"
        android:layout_below="@+id/txtTituloDialog"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout_lista_de_listas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</RelativeLayout>