<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/nav_color">

    <item android:state_pressed="true" android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/nav_color" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="#34a503"/>
            <corners
                android:radius="30dp"/>
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>

</ripple>



